---
interface Props{
    title: string;
    description: string;
    align?: 'start' | 'center';
}

const {align = 'center', description, title} = Astro.props;
---

<div class:list={['hero stack gap-4', align]}>
    <div class="stack gap-2">
        <h1 class="lg:text-6xl font-bold mb-2 flex justify-center" id="title">{title}</h1>
        {description && <p id="description">{description}</p>}
    </div>
    <slot />
</div>

<style>
    .hero {
        padding: 4rem 0;
    }
    
    #description{
        font-size: 1.5rem;
        margin: 0 3rem;
        text-align: center;

    }

    @media (max-width: 719px){
        .hero{
            padding: 2rem 0;
        }

        #title{
            font-size: 1.5rem;
            display: flex;
            justify-content: center;
            margin: 0 3rem 1rem 3rem;
        }

        #description{
            font-size: 1rem;
            margin: 0 1rem;
        }
    }
</style>
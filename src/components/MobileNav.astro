<div id="hamburger-icon" onclick="this.classList.toggle('open');">
    <div id="bar-1"></div>
    <div id="bar-2"></div>
    <div id="bar-3"></div>
    <section class="fixed flex items-center justify-center">
        <ul id="mobile-menu" class="space-y-4 text-center text-white">
            <li>
                <a href="/about">About Me</a>
            </li>
            <li>
                <a href="/projects">Projects</a>
            </li>
            <li>
                <a href="/articles">My Articles</a>
            </li>
            <li>
                <a href="/contactInfo">Contact</a>
            </li>
        </ul>
    </section>
</div>

<style>
    #hamburger-icon {
        position: fixed;
        top: 20px;
        right: 20px;
        display: none;
        flex-direction: column;
        justify-content: space-around;
        width: 2rem;
        height: 2rem;
        background: transparent;
        border: none;
        cursor: pointer;
        padding: 0;
        z-index: 10;
    }
    
    #hamburger-icon div{
        width: 35px;
        height: 3px;
        background-color: var(--color-white);
        margin: 6px 0;
        transition: 0.4s;
    }

    .open #bar-1{
        -webkit-transform: rotate(-45deg) translate(-6px, 6px);
        transform: rotate(-45deg) translate(-6px, 6px);
    }

    .open #bar-2{
        opacity: 0;
    }

    .open #bar-3{
        -webkit-transform: rotate(45deg) translate(-6px, -8px);
        transform: rotate(45deg) translate(-6px, -8px);
    }

    .open #mobile-menu{
        display: block;
    }

    #mobile-menu {
        animation: slideDown 0.5s ease-in-out forwards;
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100vh;
        background-color: var(--accent-gray);
        flex-direction: column;
        justify-content: center;
        align-items: center;
        transition: 0.3s ease-in-out;
        padding: 0;
        margin: 0;
        list-style: none;
    }

    #mobile-menu li {
        opacity: 0;
        visibility: hidden;
        animation: fadeIn 0.5s ease-out forwards;
        padding: 15px;
        font-size: 2rem;
        background-color: var(--color-black);
        border-radius: 50%;
        border: 5px;
        border-style: outset;
        border-color: var(--accent-purple-1);
    }

    #mobile-menu li:nth-child(1) {
        opacity: 0;
        animation-delay: 0.6s;
    }

    #mobile-menu li:nth-child(2) {
        animation-delay: 0.7s;
    }

    #mobile-menu li:nth-child(3) {
        animation-delay: 0.8s;
    }

    @media (max-width: 719px){
        #hamburger-icon{
            display: block;
        }
    }

    @keyframes slideDown {
        0% {
            transform: translateY(-100%);
            opacity: 0;
        }
        100% {
            transform: translateY(0);
            opacity: 1;
        }
    }

    @keyframes fadeIn {
    0% {
        opacity: 0;
        visibility: hidden;
    }
    100% {
        opacity: 1;
        visibility: visible;
    }
}

</style>

<script>
    document.getElementById('hamburger-icon').addEventListener('click', function() {
        var menu = document.getElementById('mobile-menu');
        if (menu.style.display === "none" || menu.style.display === "") {
            menu.style.display = "flex";
            menu.style.animation = "slideDown 0.5s ease-out forwards";
            var links = menu.getElementsByTagName('li');
            for (var i = 0; i < links.length; i++) {
                links[i].style.animation = "fadeIn 0.5s ease-out forwards";
                links[i].style.animationDelay = (i + 1) * 0.1 + "s";
            }
        } else {
            menu.style.display = "none";
            menu.style.animation = "";
            var links = menu.getElementsByTagName('li');
            for (var i = 0; i < links.length; i++) {
                links[i].style.animation = "";
            }
        }
    });
</script>
---
import type { CollectionEntry } from "astro:content";

interface Props{
    project: CollectionEntry<'projects'>;
}

const {data, slug} = Astro.props.project;
---

<a class="card" href={`/projects/${slug}`}>
    <span class="title">{data.title}</span>
    <p>{data.description}</p>
    <img src={data.img_card} alt={data.title || ''} />
</a>

<style>
    .card {
        display: grid;
        grid-template: auto 1fr / auto 1fr;
        height: 22.5vh;
        width: 25vw;
        margin-bottom: 1rem;
        border-radius: 0.375rem;
        background-color: rgb(49 46 129 / 0);
        border: 3px outset var(--accent-purple-1);
        overflow: hidden;
    }

    .card:hover {
        box-shadow: 0 0 10px 0 rgba(0, 0, 0, 0.2);
    }

    .title {
        grid-area: 1 / 1 / 2 / 2;
        z-index: 1;
        background-color: var(--accent-gray);
        margin: 0.5rem;
        padding: 0.5rem 1rem;
        font-size: 1.5rem;
        border-radius: 0.375rem;
        max-width: 15vw;
    }

    img{
        grid-area: 1 / 1 / 3 / 3;
        width: 100%;
        height: 100%;
        object-fit: cover;
        z-index: 0;
        border-radius: 0.375rem;
        opacity: 0.5;
    }

    p{
        z-index: 1;
        padding: 0.1rem .7rem;
        margin: 0.5rem;
        border-radius: 0.375rem;
        font-size: 1.2rem;
        width: 22.5vw;
    }

    @media (max-width: 719px) {
        .card {
            height: 35vh;
            width: 90vw;
            margin: 0 1.2rem;
        }

        .title {
            font-size: 1.5rem;
            max-width: 55vw;
        }

        p{
            font-size: 1.2rem;
            width: 90vw;
        }
    }

    @media (min-width: 1921px) {
        .card{
            height: 25vh;
            width: 25vw;
        }
    }
</style>